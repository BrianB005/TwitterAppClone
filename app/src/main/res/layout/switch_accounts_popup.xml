<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_with_radius"
    android:layout_marginTop="30dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardCodedText"
    android:paddingHorizontal="30dp"
    android:paddingTop="30dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accounts"
        android:layout_marginBottom="15dp"
        />
   <androidx.recyclerview.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/users_recycler_view"
       app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
       />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create new account"
        android:textAllCaps="false"
        android:backgroundTint="@android:color/transparent"
        android:paddingVertical="15dp"
        app:cornerRadius="30dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"

        app:strokeColor="@color/extra_extra_light_gray"
        android:textColor="@color/extra_extra_light_gray"
        android:layout_marginVertical="8dp"
        android:id="@+id/create_new_account"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add an existing account"
        android:textAllCaps="false"
        android:backgroundTint="@android:color/transparent"
        android:paddingVertical="15dp"
        app:cornerRadius="30dp"
        android:layout_marginVertical="8dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"

        android:clickable="true"
        android:focusable="true"
        app:strokeColor="@color/extra_extra_light_gray"
        android:textColor="@color/extra_extra_light_gray"
        android:id="@+id/open_login"/>



</LinearLayout>